# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Server
HOST=0.0.0.0
PORT=8000

# LLM Provider API Keys
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Get your API key from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Redis (optional - for distributed caching and rate limiting)
# If not set, uses in-memory storage
REDIS_URL=redis://localhost:6379/0

# Routing Configuration
DEFAULT_ROUTING_STRATEGY=fallback
# Options: fallback, round_robin, cost, latency

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# Semantic Caching
CACHE_ENABLED=true
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_TTL_SECONDS=3600
# Embedding model for semantic similarity
CACHE_EMBEDDING_MODEL=text-embedding-3-small

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
CIRCUIT_BREAKER_HALF_OPEN_REQUESTS=3

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=10.0
RETRY_EXPONENTIAL_BASE=2.0

# Timeouts (seconds)
REQUEST_TIMEOUT=60
CONNECT_TIMEOUT=10

# Provider-specific settings
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229
